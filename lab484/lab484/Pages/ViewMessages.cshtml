@page
@model lab484.Pages.ViewMessagesModel
@{
}

<h1>Sent Messages</h1>
<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Recipient</th>
            <th>Contents</th>
            <th>Sent Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.sentList)
        {
            <tr>
                <td>@message.SubjectTitle</td>
                <td>@message.RecipientUsername</td>
                <td>@message.Contents</td>
                <td>@message.SentTime</td>
            </tr>
        }
    </tbody>
</table>

<h1>Received Messages</h1>
<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Sender</th>
            <th>Contents</th>
            <th>Received Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.receivedList)
        {
            <tr>
                <td>@message.SubjectTitle</td>
                <td>@message.SenderUsername</td>
                <td>@message.Contents</td>
                <td>@message.SentTime</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="SendMessages" asp-route-userID="@Model.userID" class="btn btn-primary">Send Message</a>
</div>