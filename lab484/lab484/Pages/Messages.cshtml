@page 
@model lab484.Pages.MessagesModel

@{
}


<p>@Model.activeUser.UserName</p>
<p>@Model.activeUser.FirstName</p>
<p>@Model.activeUser.LastName</p>



<h1>Received Messages</h1>
<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Sender</th>
            <th>Contents</th>
            <th>Received Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.receivedList)
        {
            <tr>
                <td>@message.SubjectTitle</td>
                <td>@message.SenderUsername</td>
                <td>@message.Contents</td>
                <td>@message.SentTime</td>
            </tr>
        }
    </tbody>
</table>