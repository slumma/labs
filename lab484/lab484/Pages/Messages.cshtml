@page "{userID:int?}"
@model lab484.Pages.MessagesModel

@{
}

<h2>Select User to View Messages</h2>

<form method="get" asp-page="/ViewMessages">
    <div class="form-group">
        <label for="UserID">Select Username:</label>
        <select id="UserID" name="userID" asp-for="SelectedUsername" asp-items="Model.Usernames" class="form-control">
            <option value="">Select a user</option>
        </select>
    </div>
    <br /> 
    <div class="text-center">
        <button type="submit" class="btn btn-primary">View Messages</button>
    </div>

</form>
