@page
@model lab484.Pages.Faculty.AddGrantModel
@{
}

<h2 class="text-center">Add New Grant</h2>
<form method="post" class="form-horizontal">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.Supplier"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="newGrant.Supplier" required>
                <option value="" disabled selected>Select Supplier</option>
                @foreach (var supplier in Model.SupplierList)
                {
                    <option value="@supplier.SupplierName">@supplier.SupplierName</option>
                }
            </select>
            <span asp-validation-for="newGrant.Supplier" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.Project"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="newGrant.Project" />
            <span asp-validation-for="newGrant.Project" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.Amount"></label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="newGrant.Amount" required />
            <span asp-validation-for="newGrant.Amount" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.Category"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="newGrant.Category" required>
                <option value="" disabled selected>Select Category</option>
                <option value="Federal">Federal</option>
                <option value="State">State</option>
                <option value="University">University</option>
                <option value="Business">Business</option>
            </select>
            <span asp-validation-for="newGrant.Category" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.Status"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="newGrant.Status" required>
                <option value="" disabled selected>Select Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
                <option value="Pending">Pending</option>
            </select>
            <span asp-validation-for="newGrant.Status" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.Description"></label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="newGrant.Description" rows="5" required></textarea>
            <span asp-validation-for="newGrant.Description" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.SubmissionDate">Submission Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="newGrant.SubmissionDate" required />
            <span asp-validation-for="newGrant.SubmissionDate" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newGrant.AwardDate">Award Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="newGrant.AwardDate" required />
            <span asp-validation-for="newGrant.AwardDate" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Add Grant" />
        <button type="reset" class="btn btn-warning">Clear</button>
        <a asp-page="GrantList" class="btn btn-secondary">Cancel</a>
    </div>
</form>
