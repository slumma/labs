@page
@model lab484.Pages.Faculty.EditGrantModel
@{
}

<form method="post" class="form-horizontal">
    <input type="hidden" asp-for="GrantToUpdate.GrantID" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.Supplier"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="GrantToUpdate.Supplier" required />
            <span asp-validation-for="GrantToUpdate.Supplier" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.Project"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="GrantToUpdate.Project" readonly />
            <span asp-validation-for="GrantToUpdate.Project" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.Amount"></label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="GrantToUpdate.Amount" required />
            <span asp-validation-for="GrantToUpdate.Amount" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.Status"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="GrantToUpdate.Status" required>
                <option value="" disabled selected>Select Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
                <option value="Pending">Pending</option>
            </select>
            <span asp-validation-for="GrantToUpdate.Status" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.Description"></label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="GrantToUpdate.Description" rows="5" required></textarea>
            <span asp-validation-for="GrantToUpdate.Description" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.SubmissionDate">Submission Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="GrantToUpdate.SubmissionDate" required />
            <span asp-validation-for="GrantToUpdate.SubmissionDate" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="GrantToUpdate.AwardDate">Award Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="GrantToUpdate.AwardDate" required />
            <span asp-validation-for="GrantToUpdate.AwardDate" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Save" />
        <button type="submit" class="btn btn-warning" asp-page-handler="Clear">Clear</button>
        <a asp-page="DetailedView" asp-route-grantID="@Model.GrantToUpdate.GrantID" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

