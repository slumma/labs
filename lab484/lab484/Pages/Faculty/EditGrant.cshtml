@page
@model lab484.Pages.Faculty.EditGrantModel
@{
}

<div class="container">
    <div class="text-center">
        <h2>Editing Grant: @Model.GrantToUpdate.GrantID</h2>
    </div>
    <form method="post" class="form-horizontal">
        <input type="hidden" asp-for="@Model.GrantToUpdate.GrantID" />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.Supplier"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.GrantToUpdate.Supplier" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.Project"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="@Model.GrantToUpdate.Project" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.Amount"></label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="@Model.GrantToUpdate.Amount" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.Status"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="@Model.GrantToUpdate.Status">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    <option value="Pending">Pending</option>
                </select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.Description"></label>
            <div class="col-sm-10">
                <textarea class="form-control" asp-for="@Model.GrantToUpdate.Description" rows="5"></textarea>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.SubmissionDate">Submission Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" asp-for="@Model.GrantToUpdate.SubmissionDate" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="@Model.GrantToUpdate.AwardDate">Award Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" asp-for="@Model.GrantToUpdate.AwardDate" />
            </div>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" class="btn btn-success" value="Save" />
            <button type="submit" class="btn btn-warning" asp-page-handler="Clear">Clear</button>
            <a asp-page="DetailedView" asp-route-grantID="@Model.GrantToUpdate.GrantID" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
