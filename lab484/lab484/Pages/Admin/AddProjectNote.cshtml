@page "{ProjectID:int}"
@model lab484.Pages.Admin.AddProjectNoteModel
@{
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<head>
    <meta charset="utf-8" />
    <title>Add Project Note for </title>
</head>
<br />
<h2 class="text-center">Add a Project Note</h2>
<br />
<form method="post" class="form-horizontal">
    <input type="hidden" asp-for="newProjectNote.ProjectID" value="@Model.newProjectNote.ProjectID" />
    <input type="hidden" asp-for="newProjectNote.AuthorFirst" value="@Model.user.FirstName" />
    <input type="hidden" asp-for="newProjectNote.AuthorLast" value="@Model.user.LastName" />
    <input type="hidden" asp-for="newProjectNote.AuthorID" value="@Model.user.UserID" />
    <input type="hidden" asp-for="newProjectNote.TimeAdded" value="@Model.newProjectNote.TimeAdded" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="newProjectNote.Content">Content</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="newProjectNote.Content" required />
            <span class="text-danger" asp-validation-for="newProjectNote.Content"></span>
        </div>
    </div>
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-outline-primary">Submit</button>
        <button type="submit" class="btn btn-outline-secondary" asp-page-handler="Clear" formnovalidate>Clear</button>
        <a asp-page="ProjectDetail" asp-route-projectID="@Model.ProjectID" class="btn btn-secondary">Cancel</a>
        <br /><br />
    </div>
</form>
