@page
@model lab484.Pages.Admin.BusinessPartnersModel
@{
}
<head>
    <meta charset="utf-8" />
    <title>Business Partners</title>
</head>
<div>
    <h2>Partners</h2>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <th>Business Partner</th>
                <th>Status</th>
                <th>Primary Contact</th>
                <th>Contact</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var bp in @Model.bpList)
                {
                    <tr>
                        <td>@bp.SupplierName</td>
                        <td>@bp.SupplierStatus</td>
                        <td>@bp.FirstName @bp.LastName</td>
                        <td>@bp.Email</td>
                        <td>
                            <div class="text-center">
                                <a class="btn btn-outline-primary" asp-page="BPDetail">Detailed View</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            
        </tbody>
    </table>
    <a class="btn btn-outline-primary" asp-page="AdminLanding">Return to Projects</a>
</div>